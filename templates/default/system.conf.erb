check system <%= @node[:fqdn] %>
  if loadavg (1min) > 4 then alert
  if loadavg (5min) > 2 then alert
  if memory usage > 85% for 5 cycles then alert
  if swap usage > 25% for 10 cycles then alert
  if cpu usage (user) > 70% for 10 cycles then alert
  if cpu usage (system) > 30% for 5 cycles then alert
  if cpu usage (wait) > 20% then alert